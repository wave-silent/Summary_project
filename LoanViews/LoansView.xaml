<UserControl x:Class="LibraryWPFApp.LoansView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Выдача книг" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Панель управления -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Padding="10" Background="#F5F5F5">
            <StackPanel Orientation="Horizontal">
                <Button Content="Выдать книгу" Width="100" Height="30" Margin="0,0,5,0"
                        Command="{Binding AddLoanCommand}"/>
                <Button Content="Отметить возврат" Width="120" Height="30" Margin="5,0,5,0"
                        Command="{Binding ReturnBookCommand}"
                        IsEnabled="{Binding CanReturn}"/>
            </StackPanel>
        </Border>

        <!-- Таблица активных выдач -->
        <DataGrid Grid.Row="2" Margin="0,10,0,0" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding ActiveLoans}" 
                  SelectedItem="{Binding SelectedLoan}"
                  IsReadOnly="True" 
                  SelectionMode="Single">

            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Loan_id}"/>
                <DataGridTextColumn Header="Читатель" Width="200" 
                                    Binding="{Binding Reader.FullName}"/>
                <DataGridTextColumn Header="Книга" Width="200" 
                                    Binding="{Binding Copy.Book.Title}"/>
                <DataGridTextColumn Header="Автор" Width="150" 
                                    Binding="{Binding Copy.Book.Author.FullName}"/>
                <DataGridTextColumn Header="Дата выдачи" Width="100" 
                                    Binding="{Binding BearDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Вернуть до" Width="100" 
                                    Binding="{Binding DueDate, StringFormat=dd.MM.yyyy}"/>
                <DataGridTextColumn Header="Статус" Width="100" Binding="{Binding Status}"/>
            </DataGrid.Columns>

            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsOverdue}" Value="True">
                            <Setter Property="Background" Value="#FFF0F0"/>
                            <Setter Property="Foreground" Value="Red"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding ActiveLoanCount, StringFormat='Активных выдач: {0}'}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding OverdueCount, StringFormat='Просрочено: {0}'}"
                           Foreground="Red" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>