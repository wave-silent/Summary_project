<UserControl x:Class="LibraryWPFApp.BooksView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Управление книгами" 
                   FontSize="18" FontWeight="Bold" 
                   Margin="0,0,0,10"/>

        <!-- Панель управления -->
        <Border Grid.Row="1" BorderBrush="LightGray" BorderThickness="1" 
                CornerRadius="5" Padding="10" Background="#F5F5F5">
            <StackPanel Orientation="Horizontal">
                <Button Content="Добавить" Width="80" Height="30" Margin="0,0,5,0"
                        Command="{Binding AddBookCommand}"/>
                <Button Content="Редактировать" Width="100" Height="30" Margin="5,0,5,0"
                        Command="{Binding EditBookCommand}"/>
                <Button Content="Удалить" Width="80" Height="30" Margin="5,0,5,0"
                        Command="{Binding DeleteBookCommand}"/>


                <Separator Width="20" Background="Transparent"/>

                <!-- Поиск -->
                <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="5,0,5,0"/>
                <TextBox Width="200" Height="25" 
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
            </StackPanel>
        </Border>

        <!-- Таблица книг -->
        <DataGrid Grid.Row="2" Margin="0,10,0,0" 
                  AutoGenerateColumns="False" 
                  ItemsSource="{Binding Books}" 
                  SelectedItem="{Binding SelectedBook}"
                  IsReadOnly="True" 
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  CanUserReorderColumns="False"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="True"
                  CanUserSortColumns="True">

            <DataGrid.Columns>
                <!-- Колонки -->
                <DataGridTextColumn Header="ID" Width="50" Binding="{Binding Book_id}"/>
                <DataGridTextColumn Header="Название" Width="200" Binding="{Binding Title}"/>
                <DataGridTextColumn Header="Автор" Width="180" Binding="{Binding Author.FullName}"/>
                <DataGridTextColumn Header="Год" Width="70" Binding="{Binding Year, StringFormat='{}{0:#}'}"/>
                <DataGridTextColumn Header="Язык" Width="100" Binding="{Binding Language}"/>
                <DataGridTextColumn Header="Страниц" Width="80" Binding="{Binding Pages, StringFormat='{}{0:#}'}"/>
            </DataGrid.Columns>

        </DataGrid>

        <!-- Статус бар -->
        <StatusBar Grid.Row="3" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock Text="{Binding StatusMessage}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="{Binding BookCount, StringFormat='Книг: {0}'}" FontWeight="Bold"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</UserControl>