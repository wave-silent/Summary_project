<Window x:Class="LibraryWPFApp.ReaderEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Читатель" 
        Height="550" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="{Binding WindowTitle}" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,15"/>

        <!-- Форма -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Фамилия -->
                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Фамилия:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         Text="{Binding Fam, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Имя -->
                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Имя:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         Text="{Binding Imya, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Отчество -->
                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Отчество:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         Text="{Binding Otch, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Дата рождения -->
                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Дата рождения:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="3" Grid.Column="1" 
                           SelectedDate="{Binding BirthDate}" 
                           Margin="0,0,0,10" Height="25"/>

                <!-- Телефон -->
                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Телефон:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Email -->
                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="Email:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="5" Grid.Column="1" 
                         Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,10" Height="25"/>

                <!-- Адрес -->
                <TextBlock Grid.Row="6" Grid.Column="0" 
                           Text="Адрес:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <TextBox Grid.Row="6" Grid.Column="1"         
                         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}"          
                         Margin="0,0,0,10"       
                         AcceptsReturn="True" TextWrapping="Wrap" Height="60"/>

                <!-- Имеет книгу -->
                <CheckBox Grid.Row="7" Grid.Column="1" 
                          Content="Имеет книгу на руках"
                          IsChecked="{Binding GetRent}"
                          Margin="0,0,0,10"/>

                <!-- Должен вернуть до -->
                <TextBlock Grid.Row="8" Grid.Column="0" 
                           Text="Вернуть до:" 
                           Margin="0,0,10,10" VerticalAlignment="Center"/>
                <DatePicker Grid.Row="8" Grid.Column="1" 
                           SelectedDate="{Binding MustReturn}" 
                           Margin="0,0,0,10" Height="25"/>
            </Grid>
        </ScrollViewer>

        <!-- Кнопки -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Сохранить" Width="80" Height="30" 
                    Command="{Binding SaveCommand}" 
                    IsDefault="True" Margin="0,0,10,0"/>
            <Button Content="Отмена" Width="80" Height="30" 
                    Command="{Binding CancelCommand}" 
                    IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>